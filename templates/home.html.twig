{% extends "base.html.twig" %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<h1 class="mb-4 text-center">Nos produits</h1>
	{% for i in 1..3 %}
		<div class="row mb-3">
			{% for p in products %}
				<div class="col">
					<div class="card">
						<img src="{{p.mainPicture}}" class="img-fluid" alt="">
						<div class="card-body">
							<h4 class="card-title">{{p.name}}
								({{p.price / 100}}
								&euro;)</h4>
							<span class="badge badge-info">{{ p.category.name }}</span>
							<p class="card-text">{{p.shortDescription}}</p>
							<a href="{{ path('product_show',{'category_slug' : p.category.slug, 'slug' : p.slug })}}" class="btn btn-primary btn-sm">Détails</a>
							<a href="#" class="btn btn-success btn-sm">Ajouter</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	{% endfor %}
	<hr>
	<h2 class="text-center">Un service irréprochable</h2>
	<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Delectus est quae aperiam deserunt ad perspiciatis quos debitis, fugit placeat iusto?</p>

	<div class="row mb-5">
		{% include "shared/_assurance.html.twig" with {"color" : "primary", "icon" : "truck", "text" : "Lorem ipsum dolor sit amet consectetur adipisicing elit. Delectus"} %}
		{% include "shared/_assurance.html.twig" with {"color" : "success", "icon" : "check", "text" : "Lorem ipsum dolor sit amet consectetur adipisicing elit. Delectus"} %}
		{% include "shared/_assurance.html.twig" with {"color" : "warning", "icon" : "lock", "text" : "Lorem ipsum dolor sit amet consectetur adipisicing elit. Delectus"} %}
	</div>
{% endblock %}
