<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="https://bootswatch.com/5/solar/bootstrap.min.css">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css">
		{% endblock %}

		{% block javascripts %}{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<div class="container-fluid">
				<a class="navbar-brand" href="{{ path('home')}}">SymShop</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarColor01">
					<ul class="navbar-nav me-auto">

						{% for c in categoryRepository.findAll() %}
							<li class="nav-item">
								<a class="nav-link" href="#">{{c.name}}
									<span class="visually-hidden">(current)</span>
								</a>
							</li>
						{% endfor %}
					</ul>
					<ul class="navbar-nav">
						<li class="nav-item">
							<a href="" class="nav-link">Inscription</a>
						</li>
						<li class="nav-item">
							<a href="" class="btn btn-success">Login</a>
						</li>
						<li class="nav-item">
							<a href="btn btn-danger">Logout</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
		<div class="container mt-5"> {% block body %}{% endblock %}
			</div>

		</body>
	</html>
